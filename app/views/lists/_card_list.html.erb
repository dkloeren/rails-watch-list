<% movies = @list.movies.sample(2) %>
<% @img_right = movies.length > 0 ?  movies[0].poster_url : "" %>
<% @img_left = movies.length > 1 ?  movies[1].poster_url : "" %>

<div class="card-wrap">
  <%= link_to list_path(@list) do %>
    <div class="card-container">
      <% if @img_right.length > 0 %>
        <div class="card-list-img img-fade-right" style="background-image: url(<%= @img_right %>);"></div>
      <% end %>
      <% if @img_left.length > 0 %>
         <div class="card-list-img img-fade-left" style="background-image: url(<%= @img_left %>);"></div>
      <% end %>
       <div class="card-filter" style="background-image: linear-gradient(-10deg, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 1) 80%);"></div>
      <div class="card-title">
        <h2><%= @list.name %></h2>
      </div>
    </div>
  <% end %>
  <%= link_to list_path(@list), method: :delete do %>
    <div class="card-remove"> <strong>-</strong> </div>
  <% end %>
</div>

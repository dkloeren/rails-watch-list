<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each_with_index do |bookmark| %>
    <p>
      <%= bookmark.movie.title %> |
      <%= link_to "Remove", bookmark_path(bookmark), method: :delete %>
    </p>
    <img src="<%= bookmark.movie.poster_url %>" alt="Poster of <%= bookmark.movie.title %>">
  <% end %>
</ul>
<p><%= link_to "Add Bookmark", new_list_bookmark_path(@list) %></p>
